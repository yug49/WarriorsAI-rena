contract CrownToken is ERC20Burnable {
    error CrownToken__InvalidMintAmount();
    error CrownToken__ValueSentAndMintAmountRequestedMismatch();
    error CrownToken__InvalidBurnAmount();
    error CrownToken__NotEnoughBalance();
    error CrownToken__TransferFailed();

    /**
     * @dev Constructor that initializes the token with a name and symbol.
     * The name is "CrownToken" and the symbol is "CRwN".
     */
    constructor() ERC20("Crown Token", "CRwN") {}

    event Minted(address indexed to, uint256 amount);
    event Burned(address indexed from, uint256 amount);

    /**
     *
     * @param _amount Amount of token to be minted to the user
     */
    function mint(uint256 _amount) public payable {
        if (_amount == 0) {
            revert CrownToken__InvalidMintAmount();
        }
        if (msg.value != _amount) {
            revert CrownToken__ValueSentAndMintAmountRequestedMismatch();
        }
        _mint(msg.sender, _amount);

        emit Minted(msg.sender, _amount);
    }

    /**
     *
     * @param _amount Amount of token to be burned by the user
     */
    function burn(uint256 _amount) public override {
        if (_amount == 0) {
            revert CrownToken__InvalidBurnAmount();
        }
        if (balanceOf(msg.sender) < _amount) {
            revert CrownToken__NotEnoughBalance();
        }
        super.burn(_amount);
        (bool success,) = payable(msg.sender).call{value: _amount}("");

        if (!success) {
            revert CrownToken__TransferFailed();
        }

        emit Burned(msg.sender, _amount);
    }
}